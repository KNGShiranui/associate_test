<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @blog, local: true, url: blogs_path) do |form| %>
  <%= form.hidden_field :content %>
  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>
  <%= form.submit  "投稿する" %>
  <%= form.submit "戻る", name: 'back'  %>
<% end %>
<%= link_to '戻る', :back %>